# ===============================================
# CONFIGURAÇÃO DO ACADEMIC ASSISTANT STEALTH
# ===============================================
# 
# COPIE ESTE ARQUIVO PARA .env E CONFIGURE SUAS CHAVES
# 
# NUNCA COMPARTILHE SUAS CHAVES DE API!
# 

# ===============================================
# CONFIGURAÇÕES DE API (OBRIGATÓRIO)
# ===============================================

# OpenRouter API Key (obrigatório)
# Obtenha em: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Modelo de IA para usar (opcional)
MODEL_NAME=anthropic/claude-3.5-sonnet

# ===============================================
# CONFIGURAÇÕES DE HOTKEYS (OPCIONAL)
# ===============================================

# Hotkey para capturar screenshot
HOTKEY_CAPTURE=ctrl+y

# Hotkey para alternar interface
HOTKEY_TOGGLE=ctrl+b

# Hotkey para processar imagem
HOTKEY_PROCESS=ctrl+enter

# ===============================================
# CONFIGURAÇÕES DE SEGURANÇA (OPCIONAL)
# ===============================================

# Habilitar criptografia de dados sensíveis (true/false)
ENABLE_ENCRYPTION=true

# Tempo limite de sessão em segundos (padrão: 3600 = 1 hora)
SESSION_TIMEOUT=3600

# Máximo de requisições por minuto (padrão: 60)
MAX_API_REQUESTS_PER_MINUTE=60

# Habilitar log de auditoria (true/false)
ENABLE_AUDIT_LOGGING=true

# ===============================================
# CONFIGURAÇÕES DE INTERFACE (OPCIONAL)
# ===============================================

# Tema da interface (dark/light)
UI_THEME=dark

# Modo stealth - ocultar da barra de tarefas (true/false)
STEALTH_MODE=true

# ===============================================
# CONFIGURAÇÕES DE PROCESSAMENTO (OPCIONAL)
# ===============================================

# Idiomas para OCR (por+eng = Português + Inglês)
OCR_LANGUAGE=por+eng

# Qualidade do screenshot (0-100)
SCREENSHOT_QUALITY=85

# Habilitar aceleração GPU (true/false)
ENABLE_GPU_ACCELERATION=false

# ===============================================
# CONFIGURAÇÕES DE LOGS (OPCIONAL)
# ===============================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Diretório de logs (relativo ao projeto)
LOGS_DIR=logs

# Rotação de logs - tamanho máximo em MB
LOG_MAX_SIZE_MB=10

# Número máximo de backups de log
LOG_BACKUP_COUNT=5

# ===============================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO (OPCIONAL)
# ===============================================

# Habilitar modo de desenvolvimento (true/false)
DEV_MODE=false

# Habilitar debug verbose (true/false)
DEBUG_VERBOSE=false

# Salvar screenshots para análise (true/false)
SAVE_DEBUG_SCREENSHOTS=false 